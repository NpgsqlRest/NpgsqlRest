{
  "ApplicationName": "LegendLocalDev",
  "EnvironmentName": "Development",
  "Urls": "http://localhost:5001",

  "ConnectionStrings": {
    "Default": "Host=127.0.0.1;Port=5432;Database=legend_prototype;Username=legend_analytics_app;Password=legend_analytics_app"
  },

  "Auth": {
    "CookieAuth": true,
    "BearerTokenAuth": false
  },

  "Log": {
    "MinimalLevels": {
      "System": "Information",
      "Microsoft.Hosting": "Information"
    },
    "ToFile": false,
    "FilePath": "./logs/log.txt",
    "FileSizeLimitBytes": 500000, // 500 KB
    "RetainedFileCountLimit": 5
  },

  "StaticFiles": {
    "Enabled": false,
    "RootPath": "../_wwwroot",
    "AnonymousPaths": [ "*" ]
  },

  "NpgsqlRest": {
    "ConnectionName": "Default",
    "ExcludeSchemas": [ "public", "sys" ],
    "CommentsMode": "OnlyWithHttpTag",

    "LogCommands": true,
    "LogCommandParameters": true,

    "AuthenticationOptions": {
      "DefaultAuthenticationType": "legend",
      "UserIdParameterName": "_user_id",
      "UserNameParameterName": "_user_name",
      "UserRolesParameterName": "_user_roles"
    },

    "HttpFileOptions": {
      "Enabled": false,
      "Option": "File",
      "FileOverwrite": false,
      "NamePattern": "./http/{0}_{1}"
    },

    "TsClient": {
      "Enabled": true,
      "FilePath": "./src/app/api/{0}Api.ts",
      "FileOverwrite": true
    }
  }
}
